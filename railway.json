{
  $schema httpsrailway.apprailway.schema.json,
  build {
    builder NIXPACKS,
    buildCommand pip install -r requirements.txt
  },
  deploy {
    startCommand gunicorn appapp --bind 0.0.0.0$PORT --workers 2 --timeout 300,
    restartPolicyType ON_FAILURE,
    restartPolicyMaxRetries 10,
    healthcheckPath apihealth,
    healthcheckTimeout 120
  }
}
